{% extends 'base.html.twig' %}

{% block title %}Nutrients - Nutrient Diary{% endblock %}

{% block body %}

    <h1>Nutrients</h1>
    <div class="row">
        <div class="col-lg-6 m-2 flex-fill content">
            <div class="row content-header p-3">
                <div class="col">
                    <h5>Nutrient list</h5>
                </div>
            </div>
            <div class="row p-3">
                <div class="col">
                    {% if nutrients %}
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="counter"></th>
                                    <th>name</th>
                                    <th>daily target</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set count = 1 %}
                                {% for nutrient in nutrients %}
                                <tr>
                                    <td>{{ count }}. </td>
                                    <td>{{ nutrient.name }}</td>
                                    <td>{{ nutrient.target }} g</td>
                                    <td><a type="button" class="link" href="{{ path('nutrient', {id: nutrient.id}) }}">show details</a></td>
                                </tr>
                                {% set count = count + 1 %}
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p class="no-data">No data</p>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-lg-2 m-2 flex-fill content">
            <div class="row content-header p-3">
                <div class="col">
                    <h5>Add nutrient</h5>
                </div>
            </div>
            <div class="row p-3">
                <div class="col">
                    {{ form(addNutrientForm) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}